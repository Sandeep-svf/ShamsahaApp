<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <contactUsDataRes>

    </contactUsDataRes>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pick_them"
        tools:context=".victim.fragment.AboutFragment">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"

                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_launcher_background"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="20dp"
                                app:layout_constraintHeight_percent="0.75"
                                app:layout_constraintWidth_percent="0.1"
                                >


                            </androidx.appcompat.widget.AppCompatImageView>
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_launcher_background"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="20dp"
                                app:layout_constraintWidth_percent="0.5"
                                app:layout_constraintHeight_percent="0.75"
                                android:scaleType="centerCrop"
                                app:layout_constraintEnd_toEndOf="parent"
                                >


                            </androidx.appcompat.widget.AppCompatImageView>

                        </androidx.constraintlayout.widget.ConstraintLayout>



                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"

                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/sl767"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/who_we_are"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0.05"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:textColor="@color/white"
                                android:fontFamily="@font/avenir_heavy"
                                android:textSize="@dimen/text_heading_ultra_18sp"
                                ></androidx.appcompat.widget.AppCompatTextView>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/sl3636"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shamsaha_vision_is"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_normal_12sp"
                                app:layout_constraintStart_toStartOf="@+id/sl767"
                                app:layout_constraintEnd_toEndOf="@+id/sl767"
                                app:layout_constraintTop_toBottomOf="@+id/sl767"
                                ></androidx.appcompat.widget.AppCompatTextView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/sl3232"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to_empower"
                                android:textColor="@color/white"

                                android:fontFamily="@font/avenir_heavy"
                                android:textSize="@dimen/text_heading_ultra_18sp"

                                app:layout_constraintStart_toStartOf="@+id/sl767"
                                app:layout_constraintEnd_toEndOf="@+id/sl767"
                                app:layout_constraintTop_toBottomOf="@+id/sl3636"
                                ></androidx.appcompat.widget.AppCompatTextView>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/sl34834"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/we_believe_with"
                                android:textColor="@color/white"

                                android:fontFamily="@font/avenir_heavy"
                                android:textSize="@dimen/text_normal_12sp"

                                app:layout_constraintStart_toStartOf="@+id/sl767"
                                app:layout_constraintEnd_toEndOf="@+id/sl767"
                                app:layout_constraintTop_toBottomOf="@+id/sl3232"
                                ></androidx.appcompat.widget.AppCompatTextView>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/sl8798323"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/conviction_compossion"
                                android:textColor="@color/white"

                                android:fontFamily="@font/avenir_heavy"
                                android:textSize="@dimen/text_heading_ultra_18sp"

                                app:layout_constraintStart_toStartOf="@+id/sl767"
                                app:layout_constraintEnd_toEndOf="@+id/sl767"
                                app:layout_constraintTop_toBottomOf="@+id/sl34834"
                                ></androidx.appcompat.widget.AppCompatTextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="290dp"
                            android:background="@drawable/custom_upper_curve"
                            >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHeight_percent="0.9875"
                                android:background="@drawable/custom_upper_curve_pink"
                                >



                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintWidth_percent="0.95"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintVertical_bias="0.05"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:background="@drawable/custom_radius_corner"
                                    app:layout_constraintHeight_percent="0.45"
                                    >

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/Director_image_view"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintHeight_percent="0.925"

                                        android:adjustViewBounds="true"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.025"
                                        android:src="@drawable/ic_launcher_background"
                                        app:shapeAppearance="@style/CornerCutStart"
                                        android:scaleType="centerCrop"

                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintWidth_percent="0.325"></com.google.android.material.imageview.ShapeableImageView>



                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/director_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="@+id/Director_image_view"
                                        app:layout_constraintStart_toEndOf="@+id/Director_image_view"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.1"
                                        android:text="Marry-Justin Todd"
                                        android:textColor="@color/pick_them"
                                        android:textSize="@dimen/radious_14"
                                        android:fontFamily="@font/avenir_heavy"
                                        android:textStyle="bold"
                                        ></androidx.appcompat.widget.AppCompatTextView>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/designation_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@+id/director_name"
                                        app:layout_constraintStart_toStartOf="@+id/director_name"
                                        android:text="MPH, MA"
                                        android:textSize="@dimen/text_normal_12sp"
                                        android:fontFamily="@font/avenir_heavy"
                                        ></androidx.appcompat.widget.AppCompatTextView>
                                    <androidx.appcompat.widget.AppCompatTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@+id/designation_name"
                                       app:layout_constraintStart_toStartOf="@+id/designation_name"


                                        android:text="Shamsaha founder and excutive director"
                                        android:textSize="@dimen/text_normal_12sp"
                                        android:fontFamily="@font/avenir_heavy"
                                        ></androidx.appcompat.widget.AppCompatTextView>

                                </androidx.constraintlayout.widget.ConstraintLayout>
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintWidth_percent="0.95"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintVertical_bias="0.95"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:background="@drawable/custom_radius_corner"
                                    app:layout_constraintHeight_percent="0.45"
                                    >




                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/Founder_image_view"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintHeight_percent="0.925"

                                        android:adjustViewBounds="true"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.025"
                                        android:src="@drawable/ic_launcher_background"
                                        app:shapeAppearance="@style/CornerCutStart"
                                        android:scaleType="centerCrop"

                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintWidth_percent="0.325"></com.google.android.material.imageview.ShapeableImageView>



                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/founder_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="@+id/Founder_image_view"
                                        app:layout_constraintStart_toEndOf="@+id/Founder_image_view"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.1"
                                        android:text="Marry-Justin Todd"
                                        android:textColor="@color/pick_them"
                                        android:textSize="@dimen/radious_14"
                                        android:fontFamily="@font/avenir_heavy"
                                        android:textStyle="bold"
                                        ></androidx.appcompat.widget.AppCompatTextView>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/designation_name2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@+id/founder_name"
                                        app:layout_constraintStart_toStartOf="@+id/founder_name"
                                        android:text="MPH, MA"
                                        android:textSize="@dimen/text_normal_12sp"
                                        android:fontFamily="@font/avenir_heavy"
                                        ></androidx.appcompat.widget.AppCompatTextView>
                                    <androidx.appcompat.widget.AppCompatTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toBottomOf="@+id/designation_name2"
                                        app:layout_constraintStart_toStartOf="@+id/designation_name2"


                                        android:text="Shamsaha founder and excutive director"
                                        android:textSize="@dimen/text_normal_12sp"
                                        android:fontFamily="@font/avenir_heavy"
                                        ></androidx.appcompat.widget.AppCompatTextView>


                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </androidx.constraintlayout.widget.ConstraintLayout>




                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>




                </com.google.android.material.appbar.CollapsingToolbarLayout>


            </com.google.android.material.appbar.AppBarLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sl8934934"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/advisory_board"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_heading_super_ultra_24sp"
                        android:fontFamily="@font/avenir_heavy"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"


                        ></androidx.appcompat.widget.AppCompatTextView>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_advisory_board"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        app:layout_constraintHeight_percent="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sl8934934"
                        ></androidx.recyclerview.widget.RecyclerView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>




            </androidx.core.widget.NestedScrollView>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</layout>